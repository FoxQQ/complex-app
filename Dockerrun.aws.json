{
    "AWSEBDockerrunVersion":2,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "rngfox/complex-app-client",
            "hostname": "client",
            "essential": false
        },
        {
            "name": "server",
            "image": "rngfox/complex-app-server",
            "hostname": "api",
            "essential": false
        },
        {
            "name": "worker",
            "image": "rngfox/complex-app-worker",
            "hostname": "worker",
            "essential": false
        },
        {
            "name": "nginx",
            "image": "rngfox/complex-app-nginx",
            "hostname": "nginx",
            "essential": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": [
                "client", 
                "server"
            ]
        }
    ]
}